<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_account_journal_form_hr_expense_specific_journal_inherit" model="ir.ui.view">
            <field name="name">view.account.journal.form.hr.expense.specific.journal.inherit</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form" />
            <field name="arch" type="xml">
                <xpath expr="//group[@name='group_alias_edit']" position="after">
                    <group string="Expense journal">
                        <field name="is_expense_journal" />
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
